# OpenAI API key (required)
OPENAI_API_KEY=sk-...

# Model to use (default: gpt-5-mini)
OPENAI_MODEL=gpt-5-mini

# Maximum number of papers to include per digest (default: 7)
PAPER_LIMIT=7

# RSS fetch timeout in seconds (default: 10)
RSS_TIMEOUT=10

# Number of retries for failed RSS fetches (default: 2)
RSS_RETRIES=2

# Maximum items per source for digest diversity (default: 8, 0 = no limit)
MAX_ITEMS_PER_SOURCE=8
